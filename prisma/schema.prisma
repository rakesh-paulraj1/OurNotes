
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

 
 model User {
    id   Int @id @default(autoincrement())
  email  String @unique
  name    String
  department String ?
  subjects   Subject[]
 }
 
 model Subject{
  id Int @id @default (autoincrement())
  name String 
  files   File[]
  user   User @relation(fields: [userId], references: [id])
  userId Int
  department  Departments   @relation(fields: [departmentId], references: [id])
  departmentId Int
}
model Departments{
  id Int @id @default (autoincrement())
  name String
  subjects Subject[]
}


 model File {
  id    Int @id @default(autoincrement())
  subject   Subject @relation(fields: [subjectId], references: [id])
  subjectId Int
  department    String
  userid    Int 
 }




